{
  "name": "debugearth",
  "version": "1.0.0",
  "description": "A methodical debug agent that digs deep to uncover root causes like exploring the depths of the earth",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "debugearth-mcp": "./bin/debugearth-mcp"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "example": "ts-node examples/basic-debug.ts",
    "build:mcp": "tsc -p tsconfig.mcp.json",
    "mcp": "node dist/mcp-server.js"
  },
  "keywords": [
    "debug",
    "debugging",
    "root-cause-analysis",
    "developer-tools",
    "error-tracking"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "chalk": "^4.1.2",
    "chrome-remote-interface": "^0.33.0",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "source-map": "^0.7.4",
    "stacktrace-js": "^2.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/chrome-remote-interface": "^0.31.11",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/source-map": "^0.5.7",
    "@types/stacktrace-js": "^2.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}